<Window x:Class="CodeDup.App.Views.FileCompareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="双文件对比" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="文件A: " FontWeight="Bold"/>
            <TextBlock x:Name="FileALabel" Text=""/>
            <TextBlock Text=" | 文件B: " FontWeight="Bold" Margin="20,0,0,0"/>
            <TextBlock x:Name="FileBLabel" Text=""/>
            <TextBlock Text=" | 相似度: " FontWeight="Bold" Margin="20,0,0,0"/>
            <TextBlock x:Name="SimilarityLabel" Text=""/>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <GroupBox Header="文件A内容" Grid.Column="0" Margin="5">
                <ScrollViewer>
                    <TextBox x:Name="FileAText" IsReadOnly="True" 
                             TextWrapping="Wrap" AcceptsReturn="True"
                             FontFamily="Consolas" FontSize="12"
                             Background="White"/>
                </ScrollViewer>
            </GroupBox>
            
            <GroupBox Header="文件B内容" Grid.Column="1" Margin="5">
                <ScrollViewer>
                    <TextBox x:Name="FileBText" IsReadOnly="True" 
                             TextWrapping="Wrap" AcceptsReturn="True"
                             FontFamily="Consolas" FontSize="12"
                             Background="White"/>
                </ScrollViewer>
            </GroupBox>
        </Grid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="关闭" Click="Close_Click" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
